# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100
indent_style = space

[*.md]
max_line_length = 80
indent_size = 4

[*.{js,json,scss,less,css,jade,html,jsx}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 8

[.git/COMMIT_EDITMSG]
max_line_length = 72
